{
  "name": "html2pdf",
  "version": "1.1.0",
  "description": "Create PDFs using an Express server and Playwright running in a Docker container",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts src/healthcheck.ts --outdir=dist --bundle --minify --platform=node --target=node24 --packages=external",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepare": "husky || true",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "pino-http": "^10.5.0",
    "playwright-core": "1.57.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "pdfjs-dist": "^5.4.449",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/audunru/html2pdf.git"
  },
  "keywords": [
    "express",
    "playwright",
    "pdf",
    "docker"
  ],
  "bugs": {
    "url": "https://github.com/audunru/html2pdf/issues"
  },
  "homepage": "https://github.com/audunru/html2pdf",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  }
}
