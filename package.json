{
  "name": "html2pdf",
  "version": "0.6.0",
  "description": "Create PDFs using an Express server and Playwright running in a Docker container",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --minify --platform=node --target=node22 --packages=external",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepare": "husky || true",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.2",
    "pino-http": "^10.5.0",
    "playwright-core": "1.54.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.17.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "pdfjs-dist": "^4.10.38",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/audunru/html2pdf.git"
  },
  "keywords": [
    "express",
    "playwright",
    "pdf",
    "docker"
  ],
  "bugs": {
    "url": "https://github.com/audunru/html2pdf/issues"
  },
  "homepage": "https://github.com/audunru/html2pdf",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
