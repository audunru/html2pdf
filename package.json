{
  "name": "aws-lambda-pdf",
  "version": "0.2.2",
  "description": "Create PDFs using Amazon Lambda functions",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --target=node20 --packages=external",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepare": "husky || true",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^4.21.2",
    "playwright-core": "1.50.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@playwright/test": "^1.50.1",
    "@types/express": "^5.0.0",
    "@types/node": "^18.19.75",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "pdfjs-dist": "^4.10.38",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^2.1.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/audunru/aws-lambda-pdf.git"
  },
  "keywords": [
    "aws",
    "lambda",
    "pdf"
  ],
  "bugs": {
    "url": "https://github.com/audunru/aws-lambda-pdf/issues"
  },
  "homepage": "https://github.com/audunru/aws-lambda-pdf",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
