{
  "name": "html2pdf",
  "version": "0.6.0",
  "description": "Create PDFs using an Express server and Playwright running in a Docker container",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "dev": "tsx watch src/index.ts",
    "build": "esbuild src/index.ts --outfile=dist/index.js --bundle --minify --platform=node --target=node22 --packages=external",
    "start": "node dist/index.js",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepare": "husky || true",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "pino-http": "^10.4.0",
    "playwright-core": "1.51.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@playwright/test": "^1.51.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.14",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "pdfjs-dist": "^4.10.38",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/audunru/html2pdf.git"
  },
  "keywords": [
    "express",
    "playwright",
    "pdf",
    "docker"
  ],
  "bugs": {
    "url": "https://github.com/audunru/html2pdf/issues"
  },
  "homepage": "https://github.com/audunru/html2pdf",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
